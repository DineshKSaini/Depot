<h1>Listing reviews</h1>

<table>
  <tr>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @product.reviews.each do |review| %>
  <tr>
    <td><%= review.description %></td>
    <td><%= link_to 'Show', product_review_path(@product, review) %></td>
    <td><%= link_to 'Edit', edit_product_review_path(@product, review) %></td>
    <td><%= link_to 'Destroy', product_review_path(@product, review), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Review', new_product_review_path(@product) %>
