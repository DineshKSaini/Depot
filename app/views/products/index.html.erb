<h1>Listing products</h1>
 <%= form_tag do %>
    <P>
      <%= text_field_tag :search, params[:search] %>
    </P>
    <div id="append_list">
      
    </div>
    <% end %>
<table>
  <% @products.each do |product| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td>
          <%= image_tag(product['photo_file_name'], class: 'list_image') %>
        </td>
        <td class="list_description">
          <dl>
            <dt><%= product['title'] %></dt>
            <dd><%= truncate(strip_tags(product['description']),
                             length: 80) %></dd>
          </dl>
        </td>
        <td class="list_actions">
          <%= link_to 'Show', product_path(id: product['id']) %><br/>
          <%= link_to 'Edit', edit_product_path(id: product['id']) %><br/>
          <%= link_to 'Destroy', product_path(id: product['id']),
                      confirm: 'Are you sure?',
                      method: :delete %>
          
          
      </tr>
  <% end %>
</table>
<br />
